exec --no-startup-id picom &
exec --no-startup-id sh ~/.screenlayout/vertical.sh &
exec --no-startup-id nitrogen --restore &
exec --no-startup-id redshift -O 4500 &
exec --no-startup-id fcitx -d
exec --no-startup-id nitrogen --random ~/Immagini/art --set-zoom-fill --head=0 &
exec --no-startup-id nitrogen --random ~/Immagini/art --set-zoom-fill --head=1 &
